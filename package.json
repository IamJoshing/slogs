{
  "name": "slog",
  "version": "1.0.0",
  "description": "Fast, scriptable CLI for querying Sentry issues and events",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/api/client.d.ts",
      "default": "./dist/api/client.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./redact": {
      "types": "./dist/utils/redact.d.ts",
      "default": "./dist/utils/redact.js"
    },
    "./format": {
      "types": "./dist/utils/format.d.ts",
      "default": "./dist/utils/format.js"
    }
  },
  "bin": {
    "slog": "./bin/slog"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/cli.ts",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
